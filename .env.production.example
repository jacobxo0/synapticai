# API URLs (Required)
NEXT_PUBLIC_API_URL=https://api.mindmate.app
NEXT_PUBLIC_APP_URL=https://mindmate.app

# Database (Required)
DATABASE_URL=postgresql://user:password@host:5432/mind_mate_prod
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# Redis (Required)
REDIS_URL=redis://host:6379
REDIS_PASSWORD=your_redis_password

# Authentication (Required)
NEXTAUTH_URL=https://your-staging-domain.vercel.app
NEXTAUTH_SECRET=your_nextauth_secret

# AI Services (Required)
CLAUDE_API_KEY=your_api_key
CLAUDE_API_VERSION=2023-06-01
CLAUDE_FALLBACK_ENABLED=true
CLAUDE_RATE_LIMIT=100
CLAUDE_TIMEOUT=30000

# Monitoring (Required)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Analytics (Required)
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_PROJECT_ID=your-posthog-project-id
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Notifications (Required)
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Storage (Required)
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SENTRY=true
NEXT_PUBLIC_ENABLE_POSTHOG=true

# Environment (Required)
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Security
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=7d
COOKIE_SECRET=your_cookie_secret
CORS_ORIGIN=https://your-domain.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_key
NEW_RELIC_APP_NAME=MindMate

# Email (Optional)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@your-domain.com

# Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=your_aws_region
AWS_BUCKET=your_bucket_name

# Feature Flags
FEATURE_NEW_UI=false
FEATURE_EXPERIMENTAL=false
FEATURE_MAINTENANCE=false

# Cache
CACHE_TTL=3600
CACHE_PREFIX=prod_

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Session
SESSION_SECRET=your_session_secret
SESSION_TTL=86400

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_id
MIXPANEL_TOKEN=your_mixpanel_token

# Error Tracking
ERROR_TRACKING_ENABLED=true
ERROR_REPORTING_LEVEL=error

# Performance
COMPRESSION_ENABLED=true
CACHE_CONTROL_MAX_AGE=31536000

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're performing scheduled maintenance. We'll be back soon!"

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 0 * * *"
BACKUP_RETENTION_DAYS=7

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# Production Settings
NEXT_PUBLIC_USE_MOCK_CLAUDE=false
NEXT_PUBLIC_CLAUDE_API_KEY=your_api_key_here
NEXT_PUBLIC_DEBUG_MODE=false

# Required: Vercel Configuration
VERCEL_PROJECT_ID=your_project_id
VERCEL_ORG_ID=your_org_id
VERCEL_TOKEN=your_vercel_token 